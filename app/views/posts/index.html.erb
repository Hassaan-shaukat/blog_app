<div class="p-4">
  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mb-4" %>

  <p class="text-green-500 mb-4"><%= notice %></p>

  <h1 class="text-3xl font-bold mb-6">Posts</h1>

  <div id="posts" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @posts.each do |post| %>
      <div class="border p-4 rounded-lg shadow-sm">
        <%= render post %>
        <p class="mt-2">
          <%= link_to "Show this post", post, class: "text-blue-500 hover:underline" %>
        </p>
      </div>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-6" %>
</div>
