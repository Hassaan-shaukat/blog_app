<div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-lg">
  <% if notice %>
    <p class="text-green-500 mb-4"><%= notice %></p>
  <% end %>

  <%= render @post %>

  <div class="mt-6 flex space-x-4">
    <%= link_to "Back to posts", posts_path, class: "text-blue-500 hover:text-blue-700 font-semibold" %>
    <% if current_user.id == @post.user_id %>
    <%= link_to "Edit", edit_post_path(@post), class: "text-blue-500 hover:text-blue-700 font-semibold" %>
      <%= button_to "Delete", @post, method: :delete, class: "bg-red-500 text-white hover:bg-red-600 font-semibold py-2 px-4 rounded-md" %>
    <% end %>
  </div>
</div>
