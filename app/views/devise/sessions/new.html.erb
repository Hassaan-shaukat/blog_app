<div class="max-w-md mx-auto p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold mb-6 text-gray-900">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    <div class="field mb-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center mb-4">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 text-gray-700 font-semibold" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
